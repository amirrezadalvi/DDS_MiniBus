{
  "node_id": "node-json",
  "protocol_version": "1.0",
  "discovery": {
    "enabled": true,
    "mode": "multicast",
    "address": "239.255.0.1",
    "port": 45454,
    "interval_ms": 1000
  },
  "transport": {
    "default": "udp",
    "udp": {
      "port": 38021,
      "rcvbuf": 262144,
      "sndbuf": 262144
    }
  },
  "qos": {
    "default": "reliable",
    "reliable": {
      "ack_timeout_ms": 200,
      "max_retries": 3,
      "exponential_backoff": true
    }
  },
  "topics": ["sensor/temperature", "sensor/humidity"],
  "logging": {
    "level": "debug",
    "file": "logs/dds.log"
  },
  "serialization": {
    "format": "json",
    "supported": ["json"]
  }
}