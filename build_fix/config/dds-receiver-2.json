{
  "node_id": "dds-receiver-2",
  "protocol_version": "1.0",
  "discovery": {
    "enabled": true,
    "mode": "multicast",
    "address": "239.255.0.1",
    "port": 39001,
    "interval_ms": 1000,
    "ttl": 1
  },
  "transport": {
    "default": "udp",
    "udp": { "port": 39012, "rcvbuf": 262144, "sndbuf": 262144 },
    "tcp": { "listen": true, "connect": [], "port": 39022, "rcvbuf": 262144, "sndbuf": 262144,
      "connect_timeout_ms": 1500, "heartbeat_ms": 0, "reconnect_backoff_ms": 500, "max_reconnect_attempts": 10 }
  },
  "qos": { "default": "reliable",
    "reliable": { "ack_timeout_ms": 150, "max_retries": 3, "exponential_backoff": true },
    "dedup_capacity": 2048
  },
  "serialization": { "format": "json", "supported": ["json","cbor"], "allow_json_fallback": true },
  "topics": ["sensor/temperature","sensor/humidity"],
  "logging": { "level": "debug", "file": "logs/dds_rx2.log" }
}
